<div class="modal show fade" data-backdrop="static" data-keyboard="false" id="deleteConfModal" tabindex="-1" role="dialog" style="display: block;">
    <div class="modal-dialog modal-modal-dialog-centered border border-danger rounded" role="document">
        <div class="modal-content">

            <div class="modal-header bg-danger">
                <h5 class="modal-title text-white" id="exModalLabel">Confirm Deleting</h5>
                <button type="button" class="btn-close bg-white" @onclick="(() => OnConfirmed.InvokeAsync(false))" datadata-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true"></span>
                </button>
            </div>

            <div class="modal-body text-center">
                <p class="text-danger"><strong>Are you sure you want to delete the ticket ?</strong></p>
                @ItemInfo
            </div>

            <div class="modal-footer">
                <button class="btn btn-outline-danger" type="button" @onclick="(() =>OnConfirmed.InvokeAsync(true))">
                    Delete
                </button>
                <button class="btn btn-outline-success" type="button" @onclick="(() =>OnConfirmed.InvokeAsync(false))" data-dismiss="modal">
                    Cancel
                </button>
            </div>

        </div>
    </div>
</div>

@code {
    [Parameter] public RenderFragment ItemInfo { get; set; }
    [Parameter] public EventCallback<bool> OnConfirmed { get; set; }
}
